<div class="row">
  <div class="center">Enter street name for all leads on a street</div>
</div>
<div class="row">
  <div class="center">
    <%= form_tag(prospects_path, method: :get) do %>
      <%= text_field_tag :loc, params[:loc], placeholder: "Search by Street" %>
      <%= hidden_field_tag :go, 'walk' %>
      <%= submit_tag 'Go', class:"btn btn-info gradient round raised btn-xs", name: nil %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="center"><%= link_to "Reset All Streets", reset_prospects_path(go: 'talk'), class:"btn btn-warning gradient round raised btn-sm" %></div>
</div>
